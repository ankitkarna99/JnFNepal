{{!< layout}} 

{{#extend "pageName"}}Home{{/extend}}

{{#extend "hero"}}
    <div class="hero">
        <div>
            <h1>Build Your Future</h1>
            <div>We offer <span>{{count}}</span> job vacancies right now!</div>
            <div class="find-job">
                <form action="/find" method="POST">
                    <input type="text" name="keywords" id="" placeholder="Job title, skills, or company">
                    <select name="city">
                        <option value="">- City -</option>
                        {{#each cities}}
                        <option value="{{this.name}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                    <button class="btn find-a-job" type="submit">FIND JOB</button>
                </form>
            </div>
        </div>
    </div>
{{/extend}}

{{#extend "body"}}
    <section class="categories">
        <div class="category" onclick="location.href='/jobs/category/Healthcare'">
            <div>
                <i class="fas fa-plus-square"></i>
                <div>Healthcare</div>
            </div>
        </div>
        <div class="category" onclick="location.href='/jobs/category/Automobile Jobs'">
            <div>
                <i class="fas fa-car-alt"></i>
                <div>Automobile Jobs</div>
            </div>
        </div>
        <div class="category" onclick="location.href='/jobs/category/Construction'">
            <div>
                <i class="far fa-building"></i>
                <div>Construction</div>
            </div>
        </div>
        <div class="category" onclick="location.href='/jobs/category/Food Service'">
            <div>
                <i class="fas fa-utensils"></i>
                <div>Food Service</div>
            </div>
        </div>
        <div class="category" onclick="location.href='/jobs/category/Computer & IT'">
            <div>
                <i class="fas fa-laptop"></i>
                <div>Computer &amp; IT</div>
            </div>
        </div>
        <div class="category" onclick="location.href='/jobs/category/Finance'">
            <div>
                <i class="fas fa-chart-pie"></i>
                <div>Finance</div>
            </div>
        </div>
    </section>
    
    <section class="section latest-jobs">
        <div class="title">Latest Jobs</div>
        <div class="content container table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Company</th>
                        <th>Job Vacancy</th>
                        <th>City</th>
                        <th>Salary</th>
                        <th>Employment</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each jobs}}
                    <tr>
                        <td>{{{ this.posted_on }}}</td>
                        <td>{{{ this.name }}}</td>
                        <td class="font-weight-bold text-primary p"><a href="/jobs/view/{{ this.id }}">{{{ this.title }}}</a></td>
                        <td>{{ this.city }}</td>
                        <td>{{ this.salary }}</td>
                        <td>{{ this.type }}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div>
            <a href="/find" class="btn">VIEW ALL</a>
        </div>
    </section>
    
    
